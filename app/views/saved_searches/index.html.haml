= render 'form'

.row
  .col-md-8.col-md-offset-2
    %h1 Listing Saved Searches

    %table.table.table-bordered.table-hover.table-stripped
      %thead
        %tr
          %th Name
          %th Start time
          %th End time
          %th City
          %th Topics
          %th
          %th

      %tbody
        - @saved_searches.each do |saved_search|
          %tr
            %td= saved_search.name
            %td= saved_search.start_time_formatted
            %td= saved_search.end_time_formatted
            %td= saved_search.city
            %td= saved_search.topics.map(&:name).join(', ')
            %td= link_to 'Edit', edit_saved_search_path(saved_search)
            %td= link_to 'Destroy', saved_search, method: :delete, data: { confirm: 'Are you sure?' }
